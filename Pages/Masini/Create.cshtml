@page
@model Proiect2.Pages.Masini.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Masina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Masina.Model" class="control-label"></label>
                <input asp-for="Masina.Model" class="form-control" />
                <span asp-validation-for="Masina.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Masina.Marca" class="control-label"></label>
                <input asp-for="Masina.Marca" class="form-control" />
                <span asp-validation-for="Masina.Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Masina.Pret" class="control-label"></label>
                <input asp-for="Masina.Pret" class="form-control" />
                <span asp-validation-for="Masina.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Masina.DataLansarii" class="control-label"></label>
                <input asp-for="Masina.DataLansarii" class="form-control" />
                <span asp-validation-for="Masina.DataLansarii" class="textdanger"></span>
            </div>
            <label asp-for="Masina.ProducatorID" class="control-label">Nume producator</label>
            <select asp-for="Masina.ProducatorID" class="form-control" asp-items="ViewBag.ProducatorID">
            </select>
            <span asp-validation-for="Masina.ProducatorID" class="text-danger"></span>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AtribuireCategorieDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCategorii"
                                               value="@cat.CategorieID"
                                               @(Html.Raw(cat.Atribuire ? "checked=\"checked\"" : "")) />
                                        @cat.CategorieID @: @cat.Nume
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
